    "require": {
        "php" : "^7.4|^8.0",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpunit/phpunit" : "^9.0",
        "mockery/mockery": "^1.2",
        "spatie/phpunit-snapshot-assertions": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\ArrayToXml\\": "src"
